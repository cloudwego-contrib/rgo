{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "rgo_config.yaml",
  "type": "object",
  "properties": {
    "idl_repos": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "repo_name": {
            "type": "string",
            "description": "The name of the repository. This repo_name needs as same as the repo_name in idl"
          },
          "git_url": {
            "type": "string",
            "description": "The git url of the repository"
          },
          "branch": {
            "type": "string",
            "description": "The branch of the repository"
          },
          "commit": {
            "type": "string"
          }
        },
        "required": [
          "repo_name",
          "git_url",
          "branch"
        ]
      }
    },
    "idls": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "idl_path": {
            "type": "string"
          },
          "repo_name": {
            "type": "string",
            "description": "The name of the repository. This repo_name needs as same as the repo_name in idl_repo"
          },
          "service_name": {
            "type": "string"
          }
        },
        "required": [
          "idl_repo",
          "idl_path"
        ]
      }
    }
  }
}
