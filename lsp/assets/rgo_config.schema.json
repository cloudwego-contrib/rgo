{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "rgo_config.yaml",
  "type": "object",
  "properties": {
    "idl_repo": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "repo_name": {
            "type": "string"
          },
          "repo_git": {
            "type": "string"
          },
          "branch": {
            "type": "string"
          },
          "commit": {
            "type": "string"
          }
        },
        "required": [
          "repo_name",
          "repo_git",
          "branch"
        ]
      }
    },
    "idls": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "idl_path": {
            "type": "string"
          },
          "idl_repo": {
            "type": "string"
          },
          "service_address": {
            "type": "string"
          },
          "service_name": {
            "type": "string"
          }
        },
        "required": [
          "idl_repo",
          "idl_path",
          "service_address",
          "service_name"
        ]
      }
    }
  }
}
