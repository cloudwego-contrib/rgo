{
  "$schema": "https://json.schemastore.org/package",
  "name": "rgo-language-server",
  "description": "A language server for the Go language",
  "author": "CloudWeGo",
  "license": "MIT",
  "version": "1.0.0",
  "repository": {
    "type": "git"
  },
  "publisher": "CloudWeGo",
  "categories": [],
  "keywords": [
    "multi-root ready"
  ],
  "engines": {
    "vscode": "^1.75.0"
  },
  "activationEvents": [
    "onLanguage:go"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "yamlValidation": [
      {
        "fileMatch": "rgo_config.yaml",
        "url": "./assets/rgo_config.schema.json"
      }
    ],
    "languages": [
      {
        "id": "go",
        "aliases": [
          "Go",
          "go"
        ],
        "extensions": [
          ".go"
        ]
      },
      {
        "id": "yaml",
        "aliases": [
          "yaml",
          "yml"
        ],
        "extensions": [
          "rgo_config.yaml"
        ]
      }
    ],
    "commands": [
      {
        "command": "rgo.install",
        "title": "RGo: Install language server",
        "description": "Install the rgo language server"
      },
      {
        "command": "rgo.restart",
        "title": "RGo: Restart language server",
        "description": "restart the rgo language server"
      },
      {
        "command": "rgo.gopackagesdriver",
        "title": "RGo: Install gopackgesdriver",
        "description": "Install the gopackgesdriver"
      }
    ],
    "configuration": {
      "title": "Rgo",
      "type": "object",
      "properties": {
        "rgo.lsp": {
          "type": [
            "string",
            "null"
          ],
          "default": "go install github.com/cloudwego-contrib/rgo/cmd/lsp@428f441583af11a3d79465bc135ed99018ed610f",
          "description": "The URL to install the rgo language server"
        },
        "rgo.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable the rgo language server"
        },
        "rgo.gopackagesdriver": {
          "type": [
            "string",
            "null"
          ],
          "default": "go install github.com/cloudwego-contrib/rgo/cmd/driver@latest",
          "description": "Enable/disable the rgo language server"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "lint": "eslint src  --ext .ts,.tsx",
    "test": "sh ./scripts/e2e.sh"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "^18.14.6",
    "@types/vscode": "^1.75.1",
    "@vscode/test-electron": "^2.3.9",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "eslint": "^8.57.0",
    "mocha": "^10.3.0",
    "typescript": "^5.3.3"
  }
}
